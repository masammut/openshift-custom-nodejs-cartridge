#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

case "$1" in
  -v|--version)
    version="$2"
esac

# Create additional directories required by the diy cartridge
mkdir -p ${OPENSHIFT_DIY_DIR}run

gear build
gear start

client_result "This is based on the DIY Cartridge and installs as diy (ie ~/diy)."

